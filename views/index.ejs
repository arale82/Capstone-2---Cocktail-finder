<%- include('templates/header.ejs') %>

<div class="container-fluid pb-3">
  <div>

    <% if (locals.error) { %>
      <div class="bg-light border rounded-3">
        <section class="container">
          <h2 class="m-2"><%=error%></h2>
        </section>
      </div>
    <% } else { %>
      <div class="card">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <a class="nav-link active" aria-current="true" href="/"><% if (locals.random) { %> Random <% } else { %> Detail <% } %>Cocktail</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/index">List of Cocktails</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/ingr">List by Ingredients</a>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <h2 class="m-2"><%=drink.strDrink%></h2>

          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="<%=drink.strDrinkThumb %>" class="img-fluid rounded-start" alt="Picture of <%=drink.strDrink%>">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%=drink.strCategory%></h5>
                  <p class="card-text"><small class="text-muted"><%=drink.strAlcoholic%></small></p>
                  <p class="card-text">
                    <em>Ingredients</em>
                    <% if (drink.strIngredient1) { %> <br/><%=drink.strMeasure1%> of <%=drink.strIngredient1%> <% } %>
                    <% if (drink.strIngredient2) { %> <br/><%=drink.strMeasure2%> of <%=drink.strIngredient2%> <% } %>
