                    <% if (drink.strIngredient7) { %> <br/><%=drink.strMeasure7%> of <%=drink.strIngredient7%> <% } %>
                    <% if (drink.strIngredient8) { %> <br/><%=drink.strMeasure8%> of <%=drink.strIngredient8%> <% } %>
                    <% if (drink.strIngredient9) { %> <br/><%=drink.strMeasure9%> of <%=drink.strIngredient9%> <% } %>
                    <% if (drink.strIngredient10) { %> <br/><%=drink.strMeasure10%> of <%=drink.strIngredient10%> <% } %>
                    <% if (drink.strIngredient11) { %> <br/><%=drink.strMeasure11%> of <%=drink.strIngredient11%> <% } %>
                    <% if (drink.strIngredient12) { %> <br/><%=drink.strMeasure12%> of <%=drink.strIngredient12%> <% } %>
                    <% if (drink.strIngredient13) { %> <br/><%=drink.strMeasure13%> of <%=drink.strIngredient13%> <% } %>
                    <% if (drink.strIngredient14) { %> <br/><%=drink.strMeasure14%> of <%=drink.strIngredient14%> <% } %>
                    <% if (drink.strIngredient15) { %> <br/><%=drink.strMeasure15%> of <%=drink.strIngredient15%> <% } %>
                  </p>
                  <p class="card-text">
                    <em>Preparation</em>
                    <br/><%=drink.strInstructions %></p>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% } %>
    

